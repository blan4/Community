<%= form_for "registrations[]", 
	url: set_categories_event_registrations_path(@event), 
	method: :patch, 
	html: {class: "form-horizontal"} do |f|
%>
	<% for reg in @registrations %>
		<div class="form-group">
			<%= label_tag :registration,"#{reg.user.name} #{reg.user.surname} #{reg.user.email}", class: "col-lg-2 control-label" %>
			<% @cats.each do |cat| %>
				<div class="col-lg-2">
					<%= number_field_tag "registrations[#{reg.id}][#{cat.id}]", 0, class: "form-control" %>
					<span><%= cat.name %></span>
				</div>
			<% end %>
		</div>
	<% end %>
	<%= f.submit "Save",class: "btn btn-success" %>
<% end %>
- provide(:title, 'Registrations')

.row
  == render "events/event_face", event: @event
  
  .col-sm-9
    nav.navbar.navbar-default role="navigation"
      ul.nav.navbar-nav
        li= link_to "Log", @event
        li.active= link_to "Registrations", event_registrations_path(@event)
      = link_to "Import",import_event_registrations_path(@event), class: "btn navbar-btn pull-right"
      = link_to "Categorize", categorize_event_registrations_path(@event), class: "btn navbar-btn pull-right"
    
    div
      = form_for "participants[]", url: set_was_event_registrations_path(@event), method: :patch do |f|
        - for part in @participants
          div
            = check_box_tag "participants[was][]", part.id, part.was
            = "#{part.surname} #{part.name} #{part.email}"
        
        = f.submit "Save",class: "btn btn-success"
<% provide(:title, 'Events') %>
<h1>Events <small><%=link_to "new",new_event_path, class: 'btn btn-success' %></small></h1>
<div class="row">
	<% @events.each do |event| %>
		<div class="col-lg-3">
			<div class="thumbnail">
				<%= image_tag "blank.jpg"%>
				<div class="caption">
					<h3><%= link_to event.name,event %></h3>
					<p>
						<%= event.date.strftime("%Y-%m-%d") %>
					</p>
				</div>
			</div>
		</div>
	<% end %>
</div>
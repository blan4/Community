.navbar-header
  button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".bar"
    span.sr-only Toggle navigation
    span.icon-bar
    span.icon-bar
    span.icon-bar

  = link_to 'SummaryApp',root_path, class: 'navbar-brand'

nav.collapse.navbar-collapse.bar role="navigation"
  ul.nav.navbar-nav
    li= link_to 'Events', events_path
    li= link_to 'Participants', participants_path
    li= link_to 'Statistic', statistics_path

  ul.nav.navbar-nav.navbar-right
    li
      - if admin_signed_in?
        = link_to auth_logout_path, :method => :delete do
          span.glyphicon.glyphicon-off
      - else
        = link_to 'Sign in', 'auth/google_oauth2'
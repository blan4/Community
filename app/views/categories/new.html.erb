<% provide(:title, 'New category') %>
<div class="row">
	<div class="span6 offset3">
		<h1>New category</h1>
		<%= form_for @category do |f| %>
			<%= render 'layouts/error_messages', :object => f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.submit "Create", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
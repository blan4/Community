<ul class="media-list">
	<% @users.each do |user| %>
	<li class="media well">	
		<div class="pull-right">
			<%= gravatar_image_tag user.email, gravatar: {size: 200} , class: "pull-right"%> 
			<br>
			<p>Score: <%= user.score%></p>
		</div>
		<% user.attributes.each do |key,value| %>
			<% next if key.eql?("_id") %>
			<div class="media-body">	
				<h4 class="media-heading"><%= key %></h4>
				<%= value %>
			</div>
		<% end %>
	</li>
	<% end %>
</ul>